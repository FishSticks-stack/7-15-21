<%- include('layouts/header.ejs') %>
<%- include('layouts/navigation.ejs') %>

  <!-- Section: Contact v.1 -->

  <section class="my-5">

      <!-- Section heading -->
      <h2 class="h1-responsive font-weight-bold text-center my-5">Contact us</h2>
      <!-- Section description -->
      <p class="text-center w-responsive mx-auto pb-5">Want to send us feedback, comment or report a bug? Well now you can, just
          fill out the contact form below so we can recieve your feedback and get back to you in a timely manner.
      </p>
    
      <!-- Grid row -->
      <div class="row">
    
        <!-- Grid column -->
        <div class="col-lg-5 mb-lg-0 mb-4">
          
    
            <!-- Form with header -->
            <div class="card">
              <div class="card-body">
               
                <!-- Header -->
                <div class="form-header accent-4" >
                  <h3 class="mt-2"><i class="fas fa-envelope"></i> Write to us:</h3>
                </div>
                <p class="dark-grey-text">We'll write rarely, but only the best content.</p>
                <!-- Body -->
                <form action="/thanks" method="POST"> 
                    <div class="md-form">
                      <i class="far fa-id-card prefix grey-text"></i>
                      <input type="text" id="form-name" class="form-control" name="firstName" required>
                      <label for="form-name">First name</label>
                    </div>
                    <div class="md-form">
                      <i class="fas fa-id-card prefix grey-text"></i>
                      <input type="text" id="form-name" class="form-control" name="lastName" required>
                      <label for="form-name">Last name</label>
                    </div>
                    <div class="md-form">
                      <i class="fas fa-envelope prefix grey-text"></i>
                      <input type="text" id="form-email" class="form-control" name="email" required>
                      <label for="form-email">Your email</label>
                    </div>
                    <div class="md-form">
                      <i class="fas fa-tag prefix grey-text"></i>
                      <input type="text" id="form-Subject" class="form-control" name="subject" required>
                      <label for="form-Subject">Subject</label>
                    </div>
                    <div class="md-form">
                      <i class="fas fa-pencil-alt prefix grey-text"></i>
                      <textarea id="form-text" class="form-control md-textarea" rows="3" name="comment"
                       required></textarea>
                      <label for="form-text">Send message</label>
                    </div>
                    <div class="text-center">
                      <!--this must be a button for the required value to work!-->
                      <button class="btn btn-block warm-flame-gradient">Submit</button>
                    </div>
                  </form>
                </div>
              </div>
            <!-- Form with header -->
            
          </div>
          <!-- Grid column -->
      
          <!-- Grid column -->
          <div class="col-lg-7">
      
            <!--Google map-->
            <div id="map-container-section" class="z-depth-1-half map-container-section mb-4" style="height: 400px">
              <iframe src="https://maps.google.com/maps?q=Houston&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0"
                style="width: 100%; height: 400px;" allowfullscreen></iframe>
            </div>
            <!-- Buttons-->
            <div class="row text-center">
              <div class="col-md-4">
                <a class="btn-floating">
                  <i class="fas fa-map-marker-alt"></i>
                </a>
                <p>Houston, TX</p>
                <p class="mb-md-0">United States</p>
              </div>
              <div class="col-md-4">
              
                <p>+ 01 234 567 89</p>
                <p class="mb-md-0">Mon - Fri, 8:00-22:00</p>
              </div>
              <div class="col-md-4">
                <a class="btn-floating">
                  <i class="fas fa-envelope"></i>
                </a>
                <p>vanessaWebsite@gmail.com</p>
                <p class="mb-0">business@gmail.com</p>
              </div>
            </div>
      
          </div>
          <!-- Grid column -->
    
      </div>
      <!-- Grid row -->
    
    </section>

  <!-- Section: Contact v.1 -->

